<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/title_image_left"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/title_lefticon_left"
        android:layout_width="wrap_content"
        android:background="@color/title_background_color"
        android:src="@drawable/pic_mail_back"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/title_center_location"
        android:layout_height="5dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/title_spinner_item_width"
        android:layout_alignParentBottom="true"
    />


<LinearLayout
    android:id="@+id/title_linerlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/title_name"
        android:textSize="@dimen/title_name_size"
        android:text="本周邮件"
        android:textColor="@color/titile_name_color"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <ImageView
        android:id="@+id/title_name_img"
        android:layout_marginLeft="@dimen/title_dropdown_left"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pic_title_drop_down"/>
</LinearLayout>



</RelativeLayout>