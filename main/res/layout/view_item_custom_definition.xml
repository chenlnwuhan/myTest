<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="200dp">
    <TextView
        android:id="@+id/img_listview_isnew"
        android:gravity="center"
        android:text = "1"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/pic_custom_definition_sequence"
        />
    <LinearLayout
        android:id="@+id/linearlayout_custom_difinition_info"
        android:layout_toRightOf="@id/img_listview_isnew"

        android:layout_centerVertical="true"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        >
        <TextView

            android:text="刘娜"
            android:id="@+id/listview_item_info"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView

            android:id="@+id/listview_item_people"
            android:text="界定人  刘倩"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <TextView
        android:layout_toLeftOf="@+id/linearlayout_item_buildname"
        android:layout_toRightOf="@id/linearlayout_custom_difinition_info"
        android:layout_alignTop="@id/linearlayout_custom_difinition_info"
        android:id="@+id/listview_item_phone"
        android:text="13584524587"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:id="@+id/linearlayout_item_buildname"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/listview_item_hasdeal"
            android:singleLine="true"
            android:text="已处理"
            android:textSize="14sp"
            android:gravity="right"
            android:textColor="#eb4a3f"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    <TextView
        android:id="@+id/listview_item_date"
        android:singleLine="true"
        android:text="2015-07-01"
        android:textSize="14sp"
        android:textColor="#aaaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    </LinearLayout>
</RelativeLayout>