<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/img_listview_isnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/pic_mail_new_tips"
        />
    <LinearLayout
        android:layout_toRightOf="@id/img_listview_isnew"
        android:layout_toLeftOf="@+id/linearlayout_item_buildname"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        >
        <TextView

            android:text="带看申请"
            android:id="@+id/listview_item_info"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView

            android:id="@+id/listview_item_date"
            android:text="07-01  14:58"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout_item_buildname"
        android:layout_toLeftOf="@id/img_listview_more"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/listview_item_buildname"
        android:singleLine="true"
        android:text="万科景圆"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/listview_item_hasdeal"
            android:singleLine="true"
            android:text="已处理"
            android:textSize="12sp"
            android:textColor="#eb4a3f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/img_listview_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:src="@drawable/pic_mail_item_next"
        />
</RelativeLayout>