<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/title_image_left"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/title_lefticon_left"
        android:layout_width="wrap_content"
        android:background="@color/title_background_color"
        android:src="@drawable/pic_title_message"
        android:layout_height="fill_parent" />
    <TextView
        android:id="@+id/title_tip_text"
        android:background="@drawable/shape_circular_tip"
        android:text ="11"
        android:textSize="@dimen/title_tip_text_size"
        android:textColor="@color/titile_name_color"
        android:layout_toRightOf="@id/title_image_left"
        android:layout_marginTop="@dimen/title_tip_up"
        android:paddingLeft="3dp"
        android:paddingTop="2dp"
        android:layout_marginLeft="-7dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        />
    <LinearLayout
        android:id="@+id/title_center_location"
        android:layout_height="5dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/title_spinner_item_width"
        android:layout_alignParentBottom="true"
        />

<LinearLayout
    android:id="@+id/title_linerlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/title_name"
        android:textSize="@dimen/title_name_size"
        android:text="万科魅力之城"
        android:textColor="@color/titile_name_color"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <ImageView
        android:id="@+id/title_name_img"
        android:layout_marginLeft="@dimen/title_dropdown_left"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/pic_title_drop_down"/>
</LinearLayout>

    <ImageButton
        android:id="@+id/tilte_image_right"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:src="@drawable/pic_title_scan"
        android:background="@color/title_background_color"
        android:layout_marginRight="8dp"
        android:layout_height="fill_parent" />





</RelativeLayout>